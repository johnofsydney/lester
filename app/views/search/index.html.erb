<h1>Search#index</h1>
<p>Find me in app/views/search/index.html.erb</p>


<%= form_with url: {controller: "search", action: "index"}, method: :get do %>
  <%= label_tag :query, 'Search' %>
  <%= text_field_tag :query %>
  <%= submit_tag 'Search' %>
<% end %>

<% if @results.present? %>
  <%= @results.map{|r| r.content } %>

  <%= render(SearchResultsComponent.new(results: @results)) %>
<% end %>
