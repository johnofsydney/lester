<%= turbo_frame_tag :feed do %>
  <div>
  <% depth = 4 %>
    <%= render TransfersTableComponent.new(
        entity: @person,
        transfers: @person.consolidated_transfers(depth: depth),
        heading: "Transfers connected to groups and people that are connected to #{@person.name} to a depth of #{depth} degrees of separation",
        summarise_for: Group.summarise_for,
        remove_zero_degrees: true
      )
    %>
  </div>
<% end %>